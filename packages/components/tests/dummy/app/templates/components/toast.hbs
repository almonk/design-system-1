{{page-title "Toast component"}}

<h2 class="dummy-h2">Alert</h2>

<Hds::Alert
  @type="inline"
  @color="success"
  @title="ALERT without actions"
  @description="This should not show the `actions` block."
/>

<br />

<Hds::Alert
  @type="inline"
  @color="success"
  @title="ALERT with actions"
  @description="This should show the `actions` block."
  as |A|
>
  <A.Button @text="Action" @color="secondary" />
</Hds::Alert>

<br />

<Hds::Alert
  @type="inline"
  @color="critical"
  @title="ALERT with generic"
  @description="This should show only the `generic` block."
  as |A|
>
  <A.Generic>
    [my generic custom stuff here]
  </A.Generic>
</Hds::Alert>

<br />

<Hds::Alert
  @type="inline"
  @color="success"
  @title="ALERT with actions with IF ({{this.fakeBool}})"
  @description="This should not show the `actions` block."
  as |A|
>
  {{~#if this.fakeBool~}}
    <A.Button @text="Action" @color="secondary" />
  {{~/if~}}

</Hds::Alert>

<br />

<Hds::Alert
  @type="inline"
  @color="critical"
  @title="ALERT with actions with IF ({{this.fakeBool}}) + generic content"
  @description="This should not show the `actions` block."
  as |A|
>
  {{~#if this.fakeBool~}}
    <A.Button @text="Action" @color="secondary" />
  {{~/if~}}

  <A.Generic>
    [my generic custom stuff here]
  </A.Generic>

</Hds::Alert>

